<%= turbo_frame_tag "queue" do %>
  <h3 class="text-xl">
    <% if performance.acts.exists? %>
      <div class="space-y-4">
      <% performance.acts.order(created_at: :asc).each do |act| %>
        <div class="text-white">
          <span class="text-blue-400"><%= act.song.name %></span> by <span class="text-green-500"><%= act.user.nickname %></span>
        </div>
      <% end %>
      </div>
    <% else %>
    <span class="text-white">Nothing is in the queue</span>
    <% end %>
  </h3>
<% end %>