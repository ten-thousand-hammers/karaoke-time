<%= turbo_frame_tag "queue" do %>
  <h3 class="text-xl">
    <% if performance.acts.exists? %>
      <div class="space-y-4">
      <% performance.acts.order(created_at: :asc).each do |act| %>
        <div class="text-white">
          <span class="text-blue-400"><%= act.song.name %></span> by <span class="text-yellow-300"><%= act.user.nickname %></span>
          <%= link_to "Skip", skip_path(act_id: act.id), data: { turbo_method: :post, turbo_confirm: "Are you sure?" }, class: "text-xs text-teal-400" %>
        </div>
      <% end %>
      </div>
    <% else %>
    <span class="text-white">Nothing is in the queue</span>
    <% end %>
  </h3>
<% end %>