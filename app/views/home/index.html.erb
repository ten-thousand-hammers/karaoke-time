<%= turbo_stream_from "home" %>

<main class="container mx-auto mt-28 px-5">
  <div class="text-center mb-4">
    <% if user_signed_in? %>
      <h1 class="">Welcome, <%= current_user&.nickname %></h1>
    <% end %>
    <%= render "navigation" %>
  </div>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-4xl">
      <div class="bg-black p-8 space-y-8">
        <div>
          <h2 class="text-2xl text-white">Now Playing</h2>
          <%= render "now_playing", performance: Performance.instance %>
        </div>

        <div>
          <h2 class="text-2xl text-white">Next Song</h2>
          <%= render "up_next", performance: Performance.instance %>
        </div>
      </div>
    </div>
  </div>
</main>