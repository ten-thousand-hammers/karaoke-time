<%= turbo_frame_tag "results" do %>
  <% if @results.present? %>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <% @results.each do |result| %>
      <div class="relative rounded-lg shadow-sm focus-within:ring-2 focus-within:ring-blue-500 focus-within:ring-offset-2 hover:border-gray-400">
        <div class="">
          <img class="w-full rounded-t-lg" src="<%= result.thumbnails.first['url'] %>" alt="">
        </div>
        <div class="bg-white rounded-b-lg">
          <p class="text-sm font-medium text-gray-900 p-3">
            <%= result.name %>
          </p>
          <p class="">
            <%= link_to "Add to Queue", 
                play_url(id: result.external_id), 
                class: "block rounded-b-lg bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600", data: { turbo_method: :post } %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
<% end %>