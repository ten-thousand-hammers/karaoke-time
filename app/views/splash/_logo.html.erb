<%= turbo_frame_tag "logo", class: "absolute w-full" do %>
  <% if performance.now_playing_song.nil? && performance.up_next_song.present? %>
    <div class="flex justify-center items-start h-screen pt-64">
      <div class="text-center text-white -mt-20">
        <% if performance.up_next_user&.avatar %>
          <%= image_tag "/images/avatars/avatar_#{performance.up_next_user.avatar}.png",
              class: "w-48 h-48 md:w-64 md:h-64 mx-auto mb-8 rounded-full border-4 border-green-500 shadow-lg",
              alt: "#{performance.up_next_user.nickname}'s avatar" %>
        <% end %>
        <h2 class="text-4xl font-bold mb-4">Up Next</h2>
        <p class="text-6xl">
          <%= performance.up_next_song.name %>
          <% if performance.up_next_download_status == 'downloading' %>
            <div class="text-2xl text-yellow-500 mt-2">
              <i class="fa-solid fa-circle-notch fa-spin"></i>
              Downloading...
            </div>
          <% elsif performance.up_next_download_status == 'failed' %>
            <div class="text-2xl text-red-500 mt-2">
              <i class="fa-solid fa-triangle-exclamation"></i>
              Download Failed
            </div>
          <% end %>
        </p>
        <% if performance.up_next_user %>
          <p class="text-2xl mt-4 text-green-500">
            <i class="fa-solid fa-microphone"></i>
            <%= performance.up_next_user.nickname %>
          </p>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="flex justify-center items-center h-screen">
      <img class="w-1/4" src="/logo3.png" alt="logo" />
    </div>
  <% end %>
<% end %>
